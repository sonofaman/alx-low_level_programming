/*
 *File: 0-positive_or_negative.c
 */
#include <stdlib.h>
#include <time.h>
#include <stdio.h>

/**
 * main - print whether the number stored in the variable
 *        n is positive or negative.
 *
 * Return: Always 0.
 */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX /2;

	if(n > 0)
		printf("%d is positive\n", nelse if(n < 0)
		printf("%d is negative\n", n)
	else
		printf("%d is zero\n", n)


		return (0);
}
